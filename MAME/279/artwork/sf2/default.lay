<?xml version="1.0"?>

<!-- SF2 Layout file with multiple bezel options -->

<mamelayout version="2">
	
	<!-- SF2 bezels -->
	<element name="border">
		<image file="sf2_bezel_43.png"/>
	</element>
	<element name="border_ws">
		<image file="sf2_bezel_ws.png"/>
	</element>
	
