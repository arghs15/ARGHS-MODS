	</view>

	<!-- NEW: SF2 Widescreen Bezel View WITHOUT Portraits -->
	<view name="SF2 Bezel WS No Portraits">
		<element ref="border_ws">
			<bounds x="0" y="0" width="1920" height="1080"/>
		</element>
		<screen index="0">
			<bounds x="190" y="0" width="1541" height="1080" />
		</screen>
		<!-- Add overlayDayWS on top of bezel -->
		<element ref="overlay_day_ws">
			<bounds x="0" y="0" width="1920" height="1080"/>
		</element>
		<!-- NO portrait elements included -->
	</view>

	<!-- NEW: SF2 4:3 Bezel Dark View WITHOUT Portraits -->
	<view name="SF2 Bezel 4:3 Dark No Portraits">
		<!-- Base bezel -->
		<element ref="border">
			<bounds x="20" y="0" width="1880" height="1080"/>
		</element>
