		</element>
		<!-- NO portrait elements included -->
	</view>

	<!-- Lights Out -->
	<view name="Lights Out">
		<screen index="0">
			<bounds x="240" y="30" width="1440" height="1022"/>
		</screen>
	<element ref="Background">
			<bounds x="0" y="0" width="1920" height="1080"/>
		</element>
		<element ref="Bezel">
			<bounds x="0" y="0" width="1920" height="1080"/>
		</element>
	</view>

	<script><![CDATA[
		file:set_resolve_tags_callback(
			function()
				local cpu = file.device:subdevice(":maincpu")
				local mem = cpu.spaces["program"]
				
				-- Function to setup character portraits for a view
				local function setup_view_portraits(view_name)
					local view = file.views[view_name]
					if not view then return end
					
					local p1char = view.items["pt_p1"]
					local p2char = view.items["pt_p2"]
					if not p1char or not p2char then return end
					
					-- Variant override memory locations for SF2
					local p1_override_active = 0xFFFF40
					local p1_override_state = 0xFFFF41
					local p2_override_active = 0xFFFF42
					local p2_override_state = 0xFFFF43
					
					-- Debug counter
					local debug_counter = 0
					
					view:set_prepare_items_callback(
						function()
							debug_counter = debug_counter + 1
							local p1_state, p2_state
							
							-- Debug every 60 frames
							if debug_counter % 60 == 0 then
								local p1_override = mem:read_u8(p1_override_active)
								local p1_override_val = mem:read_u8(p1_override_state)
								local p1_char = mem:read_u8(0xFF8657)
								print(string.format("DEBUG SF2 %s: Frame %d - P1 Override=%d, State=0x%02X, Char=0x%02X", 
									view_name, debug_counter, p1_override, p1_override_val, p1_char))
							end
							
							-- Check P1 variant override
							local p1_override = mem:read_u8(p1_override_active)
							if p1_override == 1 then
								p1_state = mem:read_u8(p1_override_state)
								if debug_counter % 60 == 0 then
									print(string.format("DEBUG SF2 %s: Using P1 override 0x%02X", view_name, p1_state))
								end
							else
								-- SF2 character detection - always read character data
								p1_state = mem:read_u8(0xFF8657) -- P1 character from cheat
								-- Only blank if character is invalid
								if p1_state > 0x0B then
									p1_state = 0x20
								end
							end
							
							-- Check P2 variant override
							local p2_override = mem:read_u8(p2_override_active)
							if p2_override == 1 then
								p2_state = mem:read_u8(p2_override_state)
							else
								-- SF2 P2 character detection - always read character data
								p2_state = mem:read_u8(0xFF8957) -- P2 character from cheat
								-- Only blank if character is invalid
								if p2_state > 0x0B then
									p2_state = 0x20
								end
							end
							
							p1char:set_state(p1_state)
							p2char:set_state(p2_state)
						end
					)
				end
				
				-- Setup portraits for all views
				setup_view_portraits("SF2 Bezel 4:3")
				setup_view_portraits("SF2 Bezel WS")
				setup_view_portraits("SF2 Bezel 4:3 Dark")
				setup_view_portraits("SF2 Bezel WS Dark")
			end
		)
	]]></script>
</mamelayout>