	<!-- NEW: SF2 4:3 Bezel View WITHOUT Portraits -->
	<view name="SF2 Bezel 4:3 No Portraits">
		<!-- Base bezel -->
		<element ref="border">
			<bounds x="20" y="0" width="1880" height="1080"/>
		</element>
		<screen index="0">
			<bounds x="240" y="0" width="1440" height="1080"/>
		</screen>
