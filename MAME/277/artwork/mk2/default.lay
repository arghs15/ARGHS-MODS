	<script><![CDATA[
		file:set_resolve_tags_callback(
			function()
				local cpu = file.device:subdevice(":maincpu")
				local mem = cpu.spaces["program"]
				
				-- Function to setup character portraits for a view
				local function setup_view_portraits(view_name)
					local view = file.views[view_name]
					if not view then return end
					
					local p1char = view.items["pt_p1"]
					local p2char = view.items["pt_p2"]
					if not p1char or not p2char then return end
					
					-- MK2 variant override memory locations (with wider spacing)
					local p1_override_active = 0x1061700
					local p1_override_state = 0x1061710
					local p2_override_active = 0x1061720
					local p2_override_state = 0x1061730
					
					view:set_prepare_items_callback(
						function()
							local p1_state, p2_state
							
							-- Check if P1 variant override is active
							if mem:read_u8(p1_override_active) == 1 then
								p1_state = mem:read_u8(p1_override_state)
							else
								-- MK2 character detection from cheat file
								p1_state = mem:read_u8(0x1060280)  -- P1 Select Character address
								if p1_state > 0x10 then
									p1_state = 0x20  -- Blank if invalid
								end
							end
							
							-- Check if P2 variant override is active
							if mem:read_u8(p2_override_active) == 1 then
								p2_state = mem:read_u8(p2_override_state)
							else
								-- MK2 P2 character detection
								p2_state = mem:read_u8(0x1060E50)  -- P2 Select Character address
								if p2_state > 0x10 then
									p2_state = 0x20  -- Blank if invalid
								end
							end
							
							p1char:set_state(p1_state)
							p2char:set_state(p2_state)
						end
					)
				end
				
				-- Setup portraits for all views
				setup_view_portraits("MK2 Bezel 4:3")
				setup_view_portraits("MK2 Bezel WS")
				setup_view_portraits("MK2 Bezel 4:3 Dark")
				setup_view_portraits("MK2 Bezel WS Dark")
			end
		)
	]]></script>
</mamelayout>